{
  "name": "evansosenko.com",
  "version": "1.0.0",
  "description": "Personal site and blog of Evan Sosenko: Ph.D. physics student, developer, gamer, and tinkerer.",
  "main": "index.html",
  "private": true,
  "keywords": [
    "jekyll"
  ],
  "homepage": "https://github.com/evansosenko/evansosenko.github.io",
  "bugs": "https://github.com/evansosenko/evansosenko.github.io/issues",
  "repository": "evansosenko/evansosenko.github.io",
  "license": "CC-BY-SA-4.0",
  "author": {
    "name": "Evan Sosenko",
    "email": "razorx@evansosenko.com",
    "url": "https://evansosenko.com/"
  },
  "scripts": {
    "install": "npm run bower",
    "postinstall": "npm run modernizr",
    "test": "standard",
    "bower": "bower install",
    "deploy": "npm run minify && npm run gh-pages",
    "gh-pages": "gulp deploy",
    "minify": "gulp minify",
    "modernizr": "modernizr -c modernizr-config.json -d src/_assets/javascripts/vendor/modernizr.js"
  },
  "files": [
    "dist"
  ],
  "standard": {
    "ignore": [
      "src/_assets/javascripts/main.js",
      "src/_assets/javascripts/vendor"
    ]
  },
  "dependencies": {
    "modernizr": "~3.3.1"
  },
  "devDependencies": {
    "bower": "^1.7.4",
    "gh-pages": "^0.9.0",
    "gulp": "^3.9.0",
    "gulp-cli": "^1.1.0",
    "gulp-htmlmin": "^1.3.0",
    "standard": "^6.0.4"
  }
}
