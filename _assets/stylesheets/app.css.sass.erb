// Fonts
@import url( 'http://fonts.googleapis.com/css?family=Open+Sans:400,400italic,600,600italic,700,700italic' )
@import "compass/css3/font-face"
+font-face( "CMUBright-Roman", url( 'fonts/cmunbmr.otf' ) )

// vars
$banner_height: 100px
$site_title_font: "CMUBright-Roman", sans-serf
$site_title_clr: white
$site_title_font_weight: normal
$pdf_icon: url( asset_path('pdficon_small.png') )
$pdf_icon_padding: 25px

